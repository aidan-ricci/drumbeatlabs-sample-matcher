# ==============================================
# ENVIRONMENT
# ==============================================
NODE_ENV=development

# ==============================================
# DATABASE
# ==============================================
# MongoDB connection string
# Local: mongodb://localhost:27017/drumbeat
# Docker: mongodb://mongo:27017/drumbeat
MONGODB_URI=mongodb://mongo:27017/drumbeat

# ==============================================
# VECTOR DATABASE (Pinecone)
# ==============================================
# Get your API key from: https://app.pinecone.io/
PINECONE_API_KEY=your-pinecone-api-key-here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=creator-embeddings

# ==============================================
# AI PROVIDER CONFIGURATION
# ==============================================
# Options: 'bedrock' or 'openai'
# If not set, will auto-detect based on AWS credentials
AI_PROVIDER=bedrock

# ==============================================
# AWS BEDROCK (Primary AI Provider)
# ==============================================
# Get credentials from AWS IAM Console
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1

# Bedrock model configuration
BEDROCK_EMBEDDING_MODEL=amazon.titan-embed-text-v1
BEDROCK_COMPLETION_MODEL=anthropic.claude-3-5-haiku-20241022-v1:0

# ==============================================
# OPENAI (Fallback AI Provider)
# ==============================================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_COMPLETION_MODEL=gpt-3.5-turbo

# ==============================================
# SERVICE PORTS
# ==============================================
API_GATEWAY_PORT=3000
ASSIGNMENT_SERVICE_PORT=3001
CREATOR_SERVICE_PORT=3002
MATCHING_SERVICE_PORT=3003

# ==============================================
# API GATEWAY CONFIGURATION
# ==============================================
# Rate limiting (requests per minute per IP)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# CORS configuration
CORS_ORIGIN=http://localhost

# ==============================================
# LOGGING
# ==============================================
# Options: 'debug', 'info', 'warn', 'error'
LOG_LEVEL=info

# ==============================================
# PERFORMANCE & OPTIMIZATION
# ==============================================
# Connection pool settings
MONGODB_MAX_POOL_SIZE=10
MONGODB_MIN_POOL_SIZE=2

# Circuit breaker settings
CIRCUIT_BREAKER_THRESHOLD=5
CIRCUIT_BREAKER_TIMEOUT=30000

# Retry settings
MAX_RETRIES=3
RETRY_DELAY_MS=1000

# ==============================================
# FEATURE FLAGS
# ==============================================
# Enable/disable features
ENABLE_ANALYTICS=false
ENABLE_CACHING=true
ENABLE_HEALTH_MONITORING=true
